<h2><%= @company.name %></h2>
<%= link_to 'Post Job', new_job_path %><br>
<%= link_to 'Edit company profile', edit_company_path %>
<ul>
<li>
  Description: <%=@company.description%>
</li>

<li>
  Location: <%=@company.location%>
</li>

<li>
  Industry: <%=@company.industry%>
</li>

<%@company.jobs.each do |job|%>
  <li>
      <p>Position available: <%=job.title%>: <%=job.description%></p>
  </li>
<%end%>
</ul>
<%= link_to 'All jobs', jobs_path %><br>

<%= link_to 'All companies', companies_path %>
